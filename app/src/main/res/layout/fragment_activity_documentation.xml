<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="-1dp"
    tools:layout_editor_absoluteY="146dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button5"
                android:layout_width="302dp"
                android:layout_height="118dp"
                android:layout_marginTop="25dp"
                android:background="#757575"
                android:drawableLeft="@drawable/pushup"
                android:text="Exercices sans Machine"
                android:textColor="#050303"
                android:textSize="24sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button3"
                android:layout_width="302dp"
                android:layout_height="118dp"
                android:layout_marginTop="23dp"
                android:background="#757575"
                android:drawableLeft="@drawable/machine"
                android:onClick="Layout_Change_Machine"
                android:text="Machines"
                android:textColor="#050303"
                android:textSize="24sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button4"
                android:layout_width="302dp"
                android:layout_height="118dp"
                android:layout_marginTop="21dp"
                android:background="#757575"
                android:drawableLeft="@drawable/warmup"
                android:text="Echauffement"
                android:textColor="#050303"
                android:textSize="24sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_entrainement"
                android:layout_width="302dp"
                android:layout_height="118dp"
                android:layout_marginTop="16dp"
                android:background="#757575"
                android:drawableLeft="@drawable/workout"
                android:onClick="Layout_Change_Workout"
                android:text="Entrainement"
                android:textColor="#050303"
                android:textSize="24sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button2"
                android:layout_width="302dp"
                android:layout_height="118dp"
                android:layout_marginTop="19dp"
                android:background="#757575"
                android:drawableLeft="@drawable/etirement"
                android:text="Etirements"
                android:textColor="#050303"
                android:textSize="24sp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>