<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.uqac.pmm">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SportService">

        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:label="@string/title_activity_home"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.SportService.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:windowSoftInputMode="adjustPan"
            android:parentActivityName=".LoginActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".HomeActivity"

            android:label="@string/title_activity_home"
            android:windowSoftInputMode="adjustPan"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".DetailEntrainementActivity"

            android:label="@string/title_activity_home"
            android:windowSoftInputMode="adjustPan"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".FragmentDocumentationActivity"
            android:exported="true"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".ListEntrainementActivity"
            android:exported="true"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".ListExerciceActivity"
            android:exported="true"
            tools:ignore="Instantiatable" />

        <activity
            android:name=".DetailExerciceActivity"
            android:exported="true"
            tools:ignore="Instantiatable" />
    </application>

</manifest>